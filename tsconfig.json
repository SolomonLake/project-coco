{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2017"],
    "outDir": "dist",
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["./src/server/*.ts"]
}
